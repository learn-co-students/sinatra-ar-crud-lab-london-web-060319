<form action="/articles/<%= @article.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
    <label>Change your article: </label>
    <input id="title" type="text" name="article[title]" value=<%= @article.title %> required>
    <label>Change the content: </label>
    <input id="content" type="text" name="article[content]" value=<%= @article.content %> required>
     <input type="submit" value="Submit!">
</form>