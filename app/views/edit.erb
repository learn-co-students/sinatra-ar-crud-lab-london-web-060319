<form action="/articles/<%= @article.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch"/>

    Article Title: <input id="title" type="text" name="article[title]" value="<%= @article.title %>" /><br>
    Article Content: <input id="content" type="text" name="article[content]" value="<%= @article.content %>" /><br>
    <input type="submit" value="edit"/>
</form>